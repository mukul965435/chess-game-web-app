<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <style>

.chessboard {
            display: grid;
            grid-template-columns: repeat(8, minmax(0, 1fr));
            grid-template-rows: repeat(8, minmax(0, 1fr));
            width: 400px;
            height: 400px;
            transform: rotate(0deg);
        }

        .piece.white {
            color: white;
            filter: drop-shadow(0 0 2px rgba(0, 0, 0, 1));
        }

        .piece.black {
            color: black;
        }

        .flipped {
            transform: rotate(180deg);
        }

        .square {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .square.light {
            background-color: #f0d9b5;
        }

        .square.dark {
            background-color: #b58863;
        }

        .piece {
            font-size: 36px;
            cursor: pointer;
        }

        .piece.draggable {
            cursor: grab;
        }

        .dragging {
            opacity: 0.5;
        }

        /* Rotate pieces for black player */
        .flipped .piece {
            transform: rotate(180deg);
        }


        /* GPT */
        .highlight {
    background-color: rgba(255, 255, 0, 0.5);
}

.last-move {
    background-color: rgba(0, 255, 0, 0.4);
}

.piece {
    font-size: 36px;
    cursor: pointer;
    transition: transform 0.3s ease; /* Smooth animation when piece moves */
    position: absolute; /* Make absolute to allow movement animation */
}
.square {
    position: relative; /* parent relative for absolute positioning inside */
}




    </style>
</head>
<body>
    
    <div class="w-full h-screen bg-zinc-900 flex flex-col items-center justify-center gap-6">

        <!-- Player Info -->
        <div class="text-white text-xl" id="playerInfo">
            Waiting for assignment...
        </div>
    
        <!-- Turn Indicator -->
        <div class="text-yellow-400 text-lg" id="turnIndicator">
            Turn: White
        </div>
    
        <!-- Game Status -->
        <div class="text-red-400 text-lg" id="gameStatus">
        </div>
    
        <!-- Chessboard -->
        <div class="chessboard w-96 h-96"></div>
    
        <!-- Restart Button -->
        <button id="restartBtn"
            class="bg-green-500 px-4 py-2 rounded text-white hover:bg-green-600">
            Restart Game
        </button>
    
    </div>
    

    <!-- SOUND -->
    <audio id="moveSound" src="https://www.soundjay.com/chess/chess-move-1.mp3"></audio>


    <script src="https://cdn.socket.io/4.8.3/socket.io.min.js" integrity="sha384-kzavj5fiMwLKzzD1f8S7TeoVIEi7uKHvbTA3ueZkrzYq75pNQUiUi6Dy98Q3fxb0" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js" integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="/js/chessgame.js"></script>

    
</body>
</html> 